<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:rich="sap.ui.richtexteditor"
>
    <Dialog
        title="{i18n>previewLetter}"
        contentWidth="85%"
        contentHeight="75%"
    >
        <rich:RichTextEditor
            id="FCR_id_RTE"
            width="100%"
            height="75vh"
            showGroupFontStyle="true"
            showGroupTextAlign="true"
            showGroupStructure="true"
            value="{PDFData>/RTEText}"
			visible="true"
        />
        <beginButton>
            <Button
                text="{i18n>GeneratePDF}"
                type="Accept"
                press=".FCR_onDownloadPDF"
                class="submit"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>close}"
                type="Reject"
                press=".FCR_onCloseDialog"
                class="sendMail"
            />
        </endButton>
    </Dialog>

</core:FragmentDefinition>