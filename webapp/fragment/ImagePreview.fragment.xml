<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idImagePreviewDialog"  contentWidth="700px"
        contentHeight="500px" stretch="false">
        <VBox class="sapUiSmallMargin">
            <Image id="idPreviewImage" width="100%" height="100%" />
            <PDFViewer id="idPreviewPdf" visible="false" width="100%" height="600px" showDownloadButton="false" />
        </VBox>
        <endButton>
            <Button text="Download" press="onDownloadAttachment" type="Emphasized" />
        </endButton>
        <beginButton>
            <Button text="Close" press="onClosePreview" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
